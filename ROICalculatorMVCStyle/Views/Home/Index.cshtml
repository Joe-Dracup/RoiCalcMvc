@model ROICalculatorMVCStyle.Models.RoiViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron myJumbotron">
    <h1>ROI Calculator</h1>
    <p class="lead">Here you can enter how much a project cost, and then how much it will make a year and find out the return on your investment!</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="wrapper">
            <h2>Enter Values Below:</h2>
            @using (Html.BeginForm("Roi", "Home", FormMethod.Post, new { name = "ROIForm" }))
            {
                <div class="form-group">
                    @Html.LabelFor(roi => roi.Benefit)
                    @Html.EditorFor(roi => roi.Benefit, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                </div>
                <div class="form-group">
                    @Html.LabelFor(roi => roi.Cost)
                    @Html.EditorFor(roi => roi.Cost, new { htmlAttributes = new { @class = "form-control", type = "number" } })

                </div>
                <div class="form-group">
                    @Html.LabelFor(roi => roi.Date )
                    @Html.EditorFor(roi => roi.Date, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                </div>
                <button type="submit" class="btn btn-default">Submit</button>
            }
        </div>
    </div>
    <div class="col-md-6">
        <div class="wrapper">
            <h2>Results:</h2>
            @(Model?.Percentage)<br />
            @(Model?.EndDate)
        </div>
    </div>
</div>